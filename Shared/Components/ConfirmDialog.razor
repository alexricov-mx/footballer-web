@using Microsoft.AspNetCore.Components
@inject IJSRuntime JSRuntime

@if (IsVisible)
{
    <div class="confirm-dialog-portal">
        <div class="confirm-dialog-backdrop">
            <div class="confirm-dialog-container">
                <div class="confirm-dialog-box">
                    <div class="confirm-dialog-header">
                        <h5 class="confirm-dialog-title">
                            @if (Type == ConfirmationType.Warning)
                            {
                                <i class="oi oi-warning text-warning me-2"></i>
                            }
                            else if (Type == ConfirmationType.Danger)
                            {
                                <i class="oi oi-warning text-danger me-2"></i>
                            }
                            else if (Type == ConfirmationType.Info)
                            {
                                <i class="oi oi-info text-info me-2"></i>
                            }
                            @Title
                        </h5>
                        @if (ShowCloseButton)
                        {
                            <button type="button" class="confirm-dialog-close" @onclick="Cancel">×</button>
                        }
                    </div>
                    <div class="confirm-dialog-body">
                        <p>@Message</p>
                        @if (!string.IsNullOrEmpty(SubMessage))
                        {
                            <small class="text-muted">@SubMessage</small>
                        }
                    </div>
                    <div class="confirm-dialog-footer">
                        @if (ShowCancelButton)
                        {
                            <button type="button" class="confirm-dialog-btn confirm-dialog-btn-secondary" @onclick="Cancel" disabled="@IsProcessing">
                                @CancelText
                            </button>
                        }
                        <button type="button" class="confirm-dialog-btn @GetConfirmButtonClass()" @onclick="Confirm" disabled="@IsProcessing">
                            @if (IsProcessing)
                            {
                                <span class="confirm-dialog-spinner"></span>
                            }
                            @ConfirmText
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string Title { get; set; } = "Confirmar acción";
    [Parameter] public string Message { get; set; } = "¿Estás seguro de que deseas continuar?";
    [Parameter] public string SubMessage { get; set; } = "";
    [Parameter] public string ConfirmText { get; set; } = "Confirmar";
    [Parameter] public string CancelText { get; set; } = "Cancelar";
    [Parameter] public ConfirmationType Type { get; set; } = ConfirmationType.Warning;
    [Parameter] public bool ShowCancelButton { get; set; } = true;
    [Parameter] public bool ShowCloseButton { get; set; } = true;
    [Parameter] public EventCallback<bool> OnResult { get; set; }

    public bool IsVisible { get; private set; } = false;
    public bool IsProcessing { get; private set; } = false;

    private TaskCompletionSource<bool>? _tcs;

    public enum ConfirmationType
    {
        Info,
        Warning,
        Danger
    }

    public async Task<bool> Show(string message, string title = "", ConfirmationType type = ConfirmationType.Warning)
    {
        Console.WriteLine($"ConfirmDialog.Show called - Message: '{message}', Title: '{title}', Type: {type}");
        
        Message = message;
        Title = string.IsNullOrEmpty(title) ? GetDefaultTitle(type) : title;
        Type = type;
        IsVisible = true;
        IsProcessing = false;

        Console.WriteLine($"ConfirmDialog configured - Message: '{Message}', Title: '{Title}'");

        // Prevent body scroll
        await JSRuntime.InvokeVoidAsync("document.body.style.setProperty", "overflow", "hidden");

        _tcs = new TaskCompletionSource<bool>();
        StateHasChanged();

        // Small delay to ensure DOM is updated
        await Task.Delay(50);

        return await _tcs.Task;
    }

    private async Task Confirm()
    {
        IsProcessing = true;
        StateHasChanged();

        // Small delay to show processing state
        await Task.Delay(300);

        await HideModal();

        _tcs?.SetResult(true);
        await OnResult.InvokeAsync(true);
    }

    private async Task Cancel()
    {
        await HideModal();

        _tcs?.SetResult(false);
        await OnResult.InvokeAsync(false);
    }

    private async Task HideModal()
    {
        IsVisible = false;
        IsProcessing = false;
        
        // Restore body scroll
        await JSRuntime.InvokeVoidAsync("document.body.style.removeProperty", "overflow");
        
        StateHasChanged();
    }

    private string GetDefaultTitle(ConfirmationType type)
    {
        return type switch
        {
            ConfirmationType.Info => "Información",
            ConfirmationType.Warning => "Confirmar acción",
            ConfirmationType.Danger => "Acción peligrosa",
            _ => "Confirmar"
        };
    }

    private string GetConfirmButtonClass()
    {
        return Type switch
        {
            ConfirmationType.Info => "confirm-dialog-btn-primary",
            ConfirmationType.Warning => "confirm-dialog-btn-warning",
            ConfirmationType.Danger => "confirm-dialog-btn-danger",
            _ => "confirm-dialog-btn-primary"
        };
    }
}

